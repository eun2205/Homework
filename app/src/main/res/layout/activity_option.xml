<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4db6ac"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.tacademy.homework.OptionActivity">

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        android:textColor="#4db6ac"
        android:background="@android:color/white"
        android:text="페이스북"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_facebook"
        android:layout_alignStart="@+id/btn_facebook"
        android:layout_below="@+id/btn_facebook"
        android:textColor="#4db6ac"
        android:background="@android:color/white"
        android:layout_marginTop="23dp"
        android:text="구글" />

    <Button
        android:id="@+id/btn_weibo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_google"
        android:layout_alignRight="@+id/btn_google"
        android:layout_below="@+id/btn_google"
        android:textColor="#4db6ac"
        android:background="@android:color/white"
        android:layout_marginTop="27dp"
        android:text="웨이보" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_weibo"
        android:layout_alignRight="@+id/btn_weibo"
        android:layout_below="@+id/btn_weibo"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:layout_marginTop="28dp"
        android:text="회원가입" />
</RelativeLayout>
